{
  "name": "@agents-at-scale/ark",
  "version": "0.1.51",
  "description": "Ark CLI - Interactive terminal interface for ARK agents",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "ark": "dist/index.js"
  },
  "files": [
    "dist",
    "templates",
    ".arkrc.template.yaml"
  ],
  "scripts": {
    "build": "npm run copy-templates && tsc && chmod +x dist/index.js",
    "copy-templates": "rm -rf templates && cp -r ../../templates .",
    "dev": "tsc --watch",
    "start": "NODE_NO_WARNINGS=1 node dist/index.js",
    "clean": "rm -rf dist",
    "lint": "eslint src/ --fix && prettier --write src/",
    "lint:check": "eslint src/ && prettier --check src/",
    "test": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --coverage --coverageDirectory=./artifacts/coverage --coverageReporters=text --coverageReporters=lcov --coverageReporters=text-summary",
    "postinstall": "echo \"Ark CLI installed. Run 'ark' to try it out.\""
  },
  "keywords": [
    "ark",
    "cli",
    "terminal",
    "ai",
    "agents"
  ],
  "license": "Apache-2.0",
  "author": "McKinsey & Company",
  "repository": {
    "type": "git",
    "url": "https://github.com/mckinsey/agents-at-scale-ark.git",
    "directory": "tools/ark-cli"
  },
  "homepage": "https://github.com/mckinsey/agents-at-scale-ark#readme",
  "bugs": {
    "url": "https://github.com/mckinsey/agents-at-scale-ark/issues"
  },
  "dependencies": {
    "@kubernetes/client-node": "^1.3.0",
    "@modelcontextprotocol/sdk": "^1.18.0",
    "axios": "^1.7.7",
    "chalk": "^4.1.2",
    "commander": "^12.1.0",
    "debug": "^4.4.1",
    "execa": "^9.6.0",
    "find-process": "^1.4.7",
    "ink": "^6.0.1",
    "ink-select-input": "^6.2.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "inquirer": "^12.1.0",
    "marked": "^15.0.12",
    "marked-terminal": "^7.3.0",
    "open": "^10.2.0",
    "openai": "^5.19.1",
    "ora": "^8.2.0",
    "react": "^19.1.5",
    "yaml": "^2.6.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@jest/globals": "^30.1.2",
    "@types/debug": "^4.1.12",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^30.0.0",
    "@types/marked-terminal": "^6.1.1",
    "@types/node": "^22.10.2",
    "@types/react": "^19.1.13",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "eslint": "^9.17.0",
    "jest": "^30.1.3",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
